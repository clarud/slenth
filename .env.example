
# =============================================================================
# SLENTH - AML MONITORING SYSTEM - Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Cloud PostgreSQL Connection
DATABASE_URL=postgresql://username:password@your-cloud-host:5432/slenth_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (for Part 1 Celery queue only)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# -----------------------------------------------------------------------------
# Vector Database - Pinecone
# -----------------------------------------------------------------------------
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INTERNAL_INDEX_HOST=https://your-internal-index-xxxxx.svc.environment.pinecone.io
PINECONE_EXTERNAL_INDEX_HOST=https://your-external-index-xxxxx.svc.environment.pinecone.io

# -----------------------------------------------------------------------------
# Qdrant (deprecated - keeping for backward compatibility)
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_EXTERNAL_RULES=external_rules

# Use Pinecone instead of Qdrant by setting provider and keys
# VECTOR_DB_PROVIDER options: qdrant | pinecone
VECTOR_DB_PROVIDER=qdrant
PINECONE_API_KEY=
# Two separate Pinecone indexes (hosts) for external and internal rules
PINECONE_EXTERNAL_INDEX_HOST=
PINECONE_INTERNAL_INDEX_HOST=


# -----------------------------------------------------------------------------

# LLM API Keys
# -----------------------------------------------------------------------------

OPENAI_API_KEY=sk-your-openai-api-key-here

OPENAI_MODEL=gpt-4-turbo-preview

OPENAI_TEMPERATURE=0.0

# If using GROQ for LLMs/embeddings
GROQ_API_KEY=

# Embeddings provider: openai | groq
EMBEDDINGS_PROVIDER=openai


# Optional: Anthropic Claude

ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

ANTHROPIC_MODEL=claude-3-opus-20240229



# -----------------------------------------------------------------------------

# Embedding Model

# -----------------------------------------------------------------------------

EMBEDDING_MODEL=text-embedding-3-large

EMBEDDING_DIMENSION=3072

EMBEDDING_BATCH_SIZE=100



# -----------------------------------------------------------------------------

# Celery Configuration (Part 1 only)

# -----------------------------------------------------------------------------

CELERY_BROKER_URL=redis://localhost:6379/0

CELERY_RESULT_BACKEND=redis://localhost:6379/0

CELERY_TASK_SERIALIZER=json

CELERY_RESULT_SERIALIZER=json

CELERY_ACCEPT_CONTENT=json

CELERY_TIMEZONE=UTC

CELERY_ENABLE_UTC=true

CELERY_WORKER_CONCURRENCY=4



# -----------------------------------------------------------------------------

# Application Settings

# -----------------------------------------------------------------------------

APP_ENV=development

APP_NAME=SLENTH AML Monitor

APP_VERSION=1.0.0

DEBUG=true

LOG_LEVEL=INFO

SECRET_KEY=your-secret-key-here-change-in-production



# API Configuration

API_HOST=0.0.0.0

API_PORT=8000

API_RELOAD=true
