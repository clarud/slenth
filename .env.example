# -----------------------------------------------------------------------------

# File Storage

# -----------------------------------------------------------------------------

UPLOAD_DIR=data/uploaded_docs

OCR_OUTPUT_DIR=data/ocr_output

REPORTS_DIR=data/reports

EVIDENCE_DIR=data/evidence

EXTERNAL_DOCS_DIR=data/external_docs

MAX_UPLOAD_SIZE_MB=50



# -----------------------------------------------------------------------------

# Alert Configuration

# -----------------------------------------------------------------------------

ALERT_SLA_HOURS_FRONT=24

ALERT_SLA_HOURS_COMPLIANCE=48

ALERT_SLA_HOURS_LEGAL=72

ALERT_WEBSOCKET_ENABLED=true



# -----------------------------------------------------------------------------

# Bayesian Engine

# -----------------------------------------------------------------------------

BAYESIAN_PRIOR_SUSPICIOUS=0.05

BAYESIAN_UPDATE_THRESHOLD=0.7



# -----------------------------------------------------------------------------

# Transaction Processing

# -----------------------------------------------------------------------------

TRANSACTION_BATCH_SIZE=100

TRANSACTION_TIMEOUT_SECONDS=60

TRANSACTION_MAX_RETRIES=3



# -----------------------------------------------------------------------------

# Document Processing (Part 2 - Synchronous)

# -----------------------------------------------------------------------------

DOCUMENT_PROCESSING_TIMEOUT=300

DOCUMENT_MAX_PAGES=100

IMAGE_MAX_SIZE_MB=20



# -----------------------------------------------------------------------------

# Monitoring and Observability

# -----------------------------------------------------------------------------

ENABLE_METRICS=true

ENABLE_TRACING=false

METRICS_PORT=9090



# Flower (Celery monitoring)

FLOWER_PORT=5555

FLOWER_BASIC_AUTH=admin:password



# -----------------------------------------------------------------------------

# Feature Flags

# -----------------------------------------------------------------------------

ENABLE_BACKGROUND_CHECK=true

ENABLE_IMAGE_FORENSICS=true

ENABLE_REVERSE_IMAGE_SEARCH=false

ENABLE_AI_DETECTION=true



# -----------------------------------------------------------------------------

# Rate Limiting

# -----------------------------------------------------------------------------

RATE_LIMIT_ENABLED=true

RATE_LIMIT_PER_MINUTE=100

RATE_LIMIT_BURST=20



# -----------------------------------------------------------------------------

# Cron Schedule

# -----------------------------------------------------------------------------

REGULATORY_SCRAPE_CRON=0 */12 * * *  # Every 12 hours

CLEANUP_CRON=0 0 * * 0  # Every Sunday at midnight


